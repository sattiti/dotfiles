# LANG
export LC_ALL=C
# export LANG=ja_JP.UTF-8
# export LANGUAGE=ja_JP.UTF-8

export EDITOR=vim

# Desktop directory path.
export DTDIR=$HOME/Desktop

# Dev directory path.
export DEVDIR=$HOME/Documents/dev

# ruby {{{
# ruby Encoding.default_external
# export RUBYOPT=-EUTF-8
# }}}

# pg {{{
pgdir=$HOME/.postgres
if [[ ! -d $pgdir ]]; then
  mkdir -pv $pgdir
fi

# postgresql home path
export PGDATA=$pgdir
unset pgdir
# }}}

# go {{{
godir=~/.go
if [[ ! -d $godir/src ]]; then
  mkdir -pv $godir/src
fi

if [[ ! -d $godir/bin ]]; then
  mkdir -pv $godir/bin
fi

# golang home path
export GOPATH=$godir
export PATH=$PATH:$GOPATH/bin
unset godir
# }}}
