export LC_ALL=C

# pg
pgbasepath=~/.postgres
if [[ ! -d $pgbasepath ]]; then
  mkdir -pv $pgbasepath
fi

# postgresql home path
export PGDATA=$pgbasepath


# ruby Encoding.default_external
export RUBYOPT=-EUTF-8


# go
gobasepath=~/.go
if [[ ! -d $gobasepath/src ]]; then
  mkdir -pv $gobasepath/src
fi

if [[ ! -d $gobasepath/bin ]]; then
  mkdir -pv $gobasepath/bin
fi

# golang home path
export GOPATH=$gobasepath
export PATH=$PATH:$GOPATH/bin