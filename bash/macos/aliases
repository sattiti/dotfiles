# date
alias date="gdate"
alias now="gdate +%F\ \(%a\)\ %T"

# ls with color.
alias ls="gls --color=always"
alias la="gls --color=always -laFht --time-style=\"+%F %a %T\""

# path to dev directory.
alias dev="cd $HOME/Documents/dev"

# path to desktop.
alias dt="cd ~/Desktop"

# Application shortcut.
alias sa="open /Applications/Safari.app"
alias ff="open /Applications/Firefox.app"
alias gc="open /Applications/Google\ Chrome.app"
alias it="open /Applications/iTunes.app"

# use gecho
alias echo="gecho"

# gshred
alias shred="gshred"

# cp
alias cp="gcp -fRv"
