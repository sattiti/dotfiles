# date
alias now="date +%F\ \(%a\)\ %T"

# ls with color.
alias ls="ls --color=always"
alias la="ls --color=always -laFht --time-style=\"+%F %a %T\""

# cal
alias cal="cal -3"

# path to desktop.
alias dt="cd ~/Desktop"

# cp
alias cp="cp -fRv"

