# export path
export PATH=/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin:$PATH:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:$HOME/.nodebrew/current/bin:$HOME/.bash/bin

# Dev directory path.
export DEV=$HOME/Documents/dev

# set language
export LC_ALL=ja_JP.UTF-8
export LANGUAGE=ja_JP.UTF-8


# go
gobasepath=~/go
if [[ ! -d $gobasepath/src ]]; then
  mkdir -pv $gobasepath/src
fi

if [[ ! -d $gobasepath/bin ]]; then
  mkdir -pv $gobasepath/bin
fi

# golang home path
export GOPATH=$gobasepath
export PATH=$PATH:$GOPATH/bin