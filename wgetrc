# wgetrc manual
# https://www.gnu.org/software/wget/manual/html_node/Wgetrc-Commands.html#Wgetrc-Commands

# Comma separated list of ACCEPTED sxtensions
# images only
accept = *.jpg, *.jpeg, *.gif, *.png, *.svg
# html only
# accept = *.html, *.htm, *.shtml, *.xhtml
# res only
# accept = *.css, *.scss, *.sass, *.js, *.jsx

# Create host directories.
add_hostdir = on

# disable server cache
cache = off

# connect timeout
connect_timeout = 180

# follow FTP links from html docs
follow_ftp = on

# ignore case
ignore_case = on

# internationalized support
iri = on

# Dont goup to parent directory.
no_parent = on

# recursive
recursive = on

# retry even connecting refused.
retry_connrefused = on

# Ignore robots.txt and nofollow
robots = off

# Comma separated list of REJECTED sxtensions
# images only
# reject = *.jpg, *.jpeg, *.gif, *.png, *.svg
# html only
# reject = *.html, *.htm, *.shtml, *.xhtml
# res only
# reject = *.css, *.scss, *.sass, *.js, *.jsx

# follow only relative links
# relative_only = on

# Force wget to use encoding as the default remote server encoding.
# remote_encoding = utf-8

# timeout
timeout = 120

# use server last modification date.
timestamping = on

# use server timestamping
use_server_timestamps = on

# How many times to retry per URL
tries = 5

# use proxy server
# use_proxy = on

# UA
# winFF53
user_agent = Mozilla/5.0 (Windows NT 6.1; Win64; x64; rv:53.0) Gecko/20100101 Firefox/53.0
# iPhone6
# user_agent = Mozilla/5.0 (iPhone; CPU iPhone OS 8_0 like Mac OS X) AppleWebKit/600.1.3 (KHTML, like Gecko) Version/8.0 Mobile/12A4345d Safari/600.1.4

verbose = on

# Wait n seconds between retrievals
# wait = 5

# Wait up to n seconds between retries of failed retrievals.
# wait_retry = 10
