git config --global user.name ""
git config --global usee.email ""

git config --global credential.helper cache
# git config --global credential.helper osxkeychain

# color
git config --global color.ui auto

# LF -> CRLF
# git config --global core.autocrlf input
git config --global core.autocrlf false
git config --global core.editor vim
git config --global core.quotepath false
git config --global core.longpaths true
git config --global core.ignorecase false
git config --global core.filemode true
git config --global core.pager less -r

# alias
git config --global alias.st 'status -v'
git config --global alias.co 'commit -v -m'
git config --global alias.ps 'push -v --progress --prune'
git config --global alias.pl 'pull -v --progress'
git config --global alias.ft 'fetch -v --all -p'
git config --global alias.ck 'checkout -v'
git config --global alias.br 'branch -v'
git config --global alias.df 'diff -v'
git config --global alias.plog 'log --oneline --decorate=full --graph --date=default --pretty=format:\"%C(green reverse)%h%C(reset) %C(cyan)%ad%C(reset) %C(yellow bold)%an%C(reset) %09%s %(red white reverse)%d%C(reset)\"'
